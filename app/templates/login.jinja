{% extends "base.html" %}

{% block title %}Login{% endblock %}

{% block styles %}
  {{ super() }}
  <link rel="stylesheet" href="{{ url_for('static', filename='css/login.css') }}">
{% endblock %}

{% block content %}
  <form id="loginForm" class="form_login">
    <input type="email" name="mail" placeholder="Email" class="input_email input" required>
    <input type="password" name="password" placeholder="Contraseña" class="input_password input" required>
    <button type="submit" class="button">Login</button>
    <p>No tienes una cuenta? <a href="{{ url_for('main.register') }}">Regístrate aquí</a></p>
  </form>
{% endblock %}


{% block scripts %}
{{ super() }}
<script src="{{ url_for('static', filename='js/login.js') }}"></script>
{% endblock %}
