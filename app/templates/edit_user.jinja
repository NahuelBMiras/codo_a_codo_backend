{% extends "base.html" %}

{% block title %}User Page{% endblock %}


{% block styles %}
  {{ super() }}
  <link rel="stylesheet" href="{{ url_for('static', filename='css/edit_user.css') }}">
{% endblock %}

{% block content %}
<article>
    <section>
        <h2>Editar Usuario</h2>
        <form id="editUserForm" class="form">
            <input type="text" name="nombre" placeholder="Nombre" value="{{ user.nombre }}" required class="input">
            <input type="text" name="apellido" placeholder="Apellido" value="{{ user.apellido }}" required class="input">
            <input type="email" name="mail" placeholder="Email" value="{{ user.mail }}" required class="input">
            <input type="password" name="password" placeholder="Nueva Contraseña" class="input">
            <button type="submit" class="button">Guardar Cambios</button>
        </form>
    </section>
    <section>
        <h2>Eliminar Perfil</h2>
        <form id="deleteUserForm" class="form">
            <input type="password" name="password" placeholder="Contraseña para confirmar" required class="input">
            <button type="submit" class="button">Eliminar Perfil</button>
        </form>
    </section>
</article>
{% endblock %}
{% block scripts %}
{{ super() }}
<script src="{{ url_for('static', filename='js/edit_user.js') }}"></script>
{% endblock %}

